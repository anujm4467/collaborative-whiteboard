{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "jest"
    ],
    "paths": {
      "collaborative-whiteboard": [
        "dist/collaborative-whiteboard"
      ],
      "collaborative-whiteboard/*": [
        "dist/collaborative-whiteboard/*"
      ],

      "@collaborative-whiteboard": [
        "projects/collaborative-whiteboard/src/public-api"
      ]
    }
  }
}
